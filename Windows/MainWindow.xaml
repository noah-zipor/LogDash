<Window x:Class="StartupDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:StartupDashboard.Views"
        xmlns:viewmodels="clr-namespace:StartupDashboard.ViewModels"
        mc:Ignorable="d"
        Title="Startup Dashboard" Height="1080" Width="1920"
        WindowStyle="None" WindowState="Maximized" Background="Black">
    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewmodels:WelcomeViewModel}">
                    <views:WelcomeView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
                    <views:LoginView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
                    <views:DashboardView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:SetupViewModel}">
                    <views:SetupView />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>
