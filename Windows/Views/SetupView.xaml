<UserControl x:Class="StartupDashboard.Views.SetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <!-- Background -->
        <Image x:Name="BackgroundImage" Stretch="UniformToFill" />
        <Rectangle Fill="Black" Opacity="0.4" />

        <Border x:Name="SetupPanel"
                Width="450" Height="400"
                Background="#33FFFFFF"
                CornerRadius="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Opacity="0.5" ShadowDepth="0" />
            </Border.Effect>

            <StackPanel Margin="40" VerticalAlignment="Center">
                <TextBlock Text="Initialize Your Dashboard"
                           Foreground="White"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Set a secure password to protect your data."
                           Foreground="#AAFFFFFF"
                           FontSize="14"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="New Password" Foreground="#AAFFFFFF" Margin="0,0,0,5" FontSize="12"/>
                <PasswordBox x:Name="PasswordInput"
                             Height="40"
                             Margin="0,0,0,15"
                             VerticalContentAlignment="Center"
                             Padding="10,0"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="Confirm Password" Foreground="#AAFFFFFF" Margin="0,0,0,5" FontSize="12"/>
                <PasswordBox x:Name="ConfirmPasswordInput"
                             Height="40"
                             Margin="0,0,0,10"
                             VerticalContentAlignment="Center"
                             Padding="10,0"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#FFFF6B6B"
                           Visibility="{Binding IsErrorVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <Button Content="Finish Setup"
                        Command="{Binding SetPasswordCommand}"
                        Height="40"
                        Background="#44FFFFFF"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,10,0,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Exit"
                        Command="{Binding ExitCommand}"
                        Background="Transparent"
                        Foreground="#AAFFFFFF"
                        BorderThickness="0"
                        Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
